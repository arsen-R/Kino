@model IEnumerable<KinoSite.Models.Actor>
@{
    ViewData["Title"] = "ActorList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Actor</h1>
<a asp-action="Create" asp-controller="Actor">Create Actor</a>

<form asp-controller="Actor" asp-action="ActorList" method="get">
    <input type="text" name="SearchString" />
    <input type="submit" value="Search" />
</form>

<div class="row">
    <table class="table table-sm table-bordered table-bordered">
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Actor Name</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    @{
                        var base64 = Convert.ToBase64String(item.Image);
                        var imgsrc = string.Format("data:image/jpg; base64,{0}", base64);
                    }
                    <img src="@imgsrc" alt="" width="150px" height="200px">
                </td>
                <td>@item.FullName</td>
                <td><a asp-action="Details" asp-controller="Actor" asp-route-id="@item.Id">Details</a></td>
                <td><a asp-action="Edit" asp-controller="Actor" asp-route-id="@item.Id">Edit</a></td>
                <td>
                    <form asp-action="Delete" asp-controller="Actor" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
<nav>
    @{
        double totalPage = ViewBag.TotalPages;
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPage; i++)
            {
                @if (i == ViewBag.TotalPages)
                {
                    <li class="page-item">
                        @Html.ActionLink(i.ToString(), "ActorList", "Actor", new { PageNumber = i }, new { @class = "page-link" })
                    </li>

                }
                else
                {
                    <li class="page-item">
                        @Html.ActionLink(i.ToString(), "ActorList", "Actor", new { PageNumber = i }, new { @class = "page-link"})
                    </li>

                }

            }
        </ul>
     }         
</nav>
