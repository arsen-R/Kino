<div class="container-movie">
    <h1>@Model.FullName </h1>
    <div class="movie-container-block">
        @foreach (var item in Model.ActorMovies)
        {
            <div class="list-container-movie">
                <div class="image-container">
                    <a asp-action="PlayMovie" asp-controller="Movie" asp-route-id="@item.Movie.Id">
                        @{
                            var Base64 = Convert.ToBase64String(item.Movie.Image);
                            var Imgsrc = string.Format("data:image/jpg; base64,{0}", Base64);
                        }
                        <img src="@Imgsrc" alt="" class="image-movie">
                    </a>
                </div>
                <a asp-action="PlayMovie" asp-controller="Movie" asp-route-id="@item.Movie.Id" class="name-movie">@item.Movie.Title</a>
            </div>
        }
    </div>
</div>
