<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KinoSite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/showfilm.css" rel="stylesheet" />
    <link href="~/css/Chosen/chosen.min.css" rel="stylesheet" />
    @*<link href="~/css/Adaptivet.css" rel="stylesheet" />*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light fixed-top bg-white">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KinoSite</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Movie" asp-action="Movie">Фільми</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="TvSeries" asp-action="TvSeries">Серіали</a>
                        </li>
                        @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="IndexForAdmin">Admin</a>
                            </li>
                        }
                    </ul>
                    <form class="d-flex" asp-controller="Home" asp-action="Search" method="get">
                        <input class="form-control me-2" type="search" id="searchString" placeholder="Search" aria-label="Search" name="SearchString">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="main">
        <section>
            @RenderBody()
        </section>
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - KinoSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/chosen.jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
