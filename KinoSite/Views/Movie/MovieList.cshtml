@model IEnumerable<KinoSite.Models.Movie>
@{
    ViewData["Title"] = "ListMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main">
    <h1>Manage Movie</h1>
    <a asp-action="Create" asp-controller="Movie">Create movie</a>
    <form asp-controller="Movie" asp-action="MovieList" method="get">
        <input type="text" id="searchString" name="SearchString" />
        <input type="submit" value="Search" />
    </form>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Зображення</th>
            <th>Заголовок</th>
            <th>Дата виходу</th>
            <th>Рейтинг</th>
            <th>Категорії</th>
            <th colspan="3">Операції</th>
        </tr>

        @foreach (var item in Model)
        {
            @if (item.CategoryId == 1)
            {
                <tr class="table">
                    <td>@item.Id</td>
                    <td>
                        @{
                            var base64 = Convert.ToBase64String(item.Image);
                            var imgsrc = string.Format("data:image/jpg; base64,{0}", base64);
                        }
                        <img src="@imgsrc" alt="" width="150px" height="200px">
                    </td>
                    <td>@item.Title</td>
                    <td>@item.DateRealise.ToLongDateString()</td>
                    <td>@item.Rating</td>
                    <td>@item.Category.NameCategory</td>
                    <td><a asp-action="PlayMovie" asp-controller="Movie" asp-route-id="@item.Id">Visit</a></td>
                    <td><a asp-action="Edit" asp-controller="Movie" asp-route-id="@item.Id">Edit</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <nav>
        @{
            double totalPage = ViewBag.TotalPages;
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= totalPage; i++)
                {
                    @if (i == ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            @Html.ActionLink(i.ToString(), "MovieList", "Movie", new { PageNumber = i }, new { @class = "page-link" })
                        </li>

                    }
                    else
                    {
                        <li class="page-item">
                            @Html.ActionLink(i.ToString(), "MovieList", "Movie", new { PageNumber = i }, new { @class = "page-link" })
                        </li>

                    }

                }
            </ul>
        }
    </nav>
</div>


